<CalculatorLayout>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(8)
        size_hint: (1, None)
        height: 200 

        TextInput:
            id: input_field
            text: root.equation
            font_size: 100
            readonly: True
            size_hint_x: None
            width: 1 * root.width 
            height: self.minimum_height
            pos_hint: {'center_y': 0.5}
            color_active: [1, 1, 1, 1]

    GridLayout:
        cols: 4
        padding: 10
        spacing: 10

        Button:
            text: '7'
            on_press: root.press('7')
            background_color: 153/255, 153/255, 255/255
            
        Button:
            text: '8'
            on_press: root.press('8')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '9'
            on_press: root.press('9')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '/'
            on_press: root.press('/')
            background_color: 102/255,255/255,102/255


        Button:
            text: '4'
            on_press: root.press('4')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '5'
            on_press: root.press('5')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '6'
            on_press: root.press('6')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '*'
            on_press: root.press('*')
            background_color: 102/255,255/255,102/255

        Button:
            text: '1'
            on_press: root.press('1')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '2'
            on_press: root.press('2')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '3'
            on_press: root.press('3')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '-'
            on_press: root.press('-')
            background_color: 102/255,255/255,102/255

        Button:
            text: '.'
            on_press: root.press('.')
            background_color: 102/255,255/255,102/255
        Button:
            text: '0'
            on_press: root.press('0')
            background_color: 153/255, 153/255, 255/255

        Button:
            text: '+'
            on_press: root.press('+')
            background_color: 102/255,255/255,102/255
        Button:
            text: '='
            on_press: root.press('=')
            background_color: 102/255,255/255,102/255
        
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(8)
        size_hint: (1, None)
        height: 100 
        Button:
            text: "Clear"
            background_color: 255/255, 0/255, 0/255
            on_press: root.press('C')
       
